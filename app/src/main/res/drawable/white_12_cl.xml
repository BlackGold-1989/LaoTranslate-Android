<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="16dp" android:height="32dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="16dp" android:bottomLeftRadius="16dp" />
            <solid android:color="@color/colorTextGreyLight" />
        </shape>
    </item>
    <item android:width="16dp" android:height="32dp" android:start="16dp">
        <shape android:shape="rectangle" >
            <corners android:topRightRadius="16dp" android:bottomRightRadius="16dp" />
            <solid android:color="#40a3e2" />
        </shape>
    </item>
</layer-list>
