<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    style="@style/text.white.24"
                    android:text="@string/string_title_comment"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_comment_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_arrow_left_white" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                style="@style/text.black.14"
                android:text="Name: " />

            <EditText
                android:id="@+id/edt_commen_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="14dp"
                android:hint="name"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorTextGrey"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <LinearLayout
            style="@style/llt_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/text.black.14"
                android:text="Email:  " />

            <EditText
                android:id="@+id/edt_commen_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="14dp"
                android:hint="email"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorTextGrey"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <LinearLayout
            style="@style/llt_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/text.black.14"
                android:text="Comment:" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="12dp"
            android:background="@drawable/white_8"
            android:gravity="center">

            <EditText
                android:id="@+id/edt_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:hint="comment"
                android:textSize="14dp"
                android:gravity="top|left"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorTextGrey"
                android:background="@null" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_comment_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:background="@drawable/blue_8"
            android:gravity="center">

            <TextView
                style="@style/text.white.18"
                android:text="Submit" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>